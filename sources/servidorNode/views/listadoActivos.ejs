<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Activos</title>
</head>
<body>
    <h1>Listado de Activos</h1>

    <% if (activos.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Fecha de Adquisición</th>
                </tr>
            </thead>
            <tbody>
                <% activos.forEach(activo => { %>
                    <tr>
                        <td><%= activo.id %></td>
                        <td><%= activo.nombre %></td>
                        <td><%= activo.descripcion %></td>
                        <td><%= activo.fecha_adquisicion %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No hay activos disponibles.</p>
    <% } %>

</body>
</html>
